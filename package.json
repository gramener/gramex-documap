{
  "name": "@gramex/documap",
  "version": "2.0.1",
  "description": "A visual topic map of documents",
  "main": "dist/documap.min.js",
  "module": "dist/documap.js",
  "scripts": {
    "docs": "documentation build documap.js --markdown-toc false -f md | prettier --parser markdown > docs/api.md",
    "lint": "prettier --write '**/*.{js,mjs,ts,md,json}' && eslint *.js *.html docs/*.html docs/documap-react/src/*.js --fix",
    "watch": "esbuild documap.js --format=esm --bundle --minify --allow-overwrite --sourcemap --outdir=dist --watch",
    "build-browser": "esbuild documap.js --format=iife --global-name=gramex --bundle --minify --allow-overwrite --sourcemap --outfile=dist/documap.min.js",
    "build-esm": "esbuild documap.js --format=esm --bundle --minify --allow-overwrite --sourcemap --outdir=dist",
    "build": "npm run build-browser && npm run build-esm",
    "prepublishOnly": "npm run lint && npm run docs && npm run build"
  },
  "files": [
    "README.md",
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:gramener/gramex-documap"
  },
  "keywords": [
    "gramex",
    "topicmap",
    "documentmap",
    "document",
    "topics",
    "topicmodel"
  ],
  "author": "S Anand <s.anand@gramener.com>",
  "contributors": [
    "Aayush Thakur <aayush.thakur@gramener.com>",
    "Chandana Sagar <chandana.sagar@gramener.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gramener/gramex-documap/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://gramener.github.io/gramex-documap/",
  "prettier": {
    "printWidth": 120
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true
    },
    "plugins": [
      "html"
    ],
    "extends": "eslint:recommended"
  },
  "devDependencies": {
    "documentation": "^14.0.2",
    "esbuild": "^0.19.2",
    "eslint": "^8.48.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "dependencies": {
    "@gramex/chartbase": "^1.0.0"
  }
}
