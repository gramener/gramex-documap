{
  "name": "@gramex/documap",
  "version": "1.0.0",
  "description": "A visual topic map of documents",
  "module": "dist/documap.js",
  "browser": "dist/documap.min.js",
  "scripts": {
    "lint": "prettier --write '**/*.{js,mjs,ts,md,json}' && eslint",
    "watch": "esbuild documap.js --format=esm --bundle --minify --allow-overwrite --sourcemap --outdir=dist --watch",
    "build-browser": "esbuild documap.js --format=iife --global-name=gramex --bundle --minify --allow-overwrite --sourcemap --outfile=dist/documap.min.js",
    "build-esm": "esbuild documap.js --format=esm --bundle --minify --allow-overwrite --sourcemap --outdir=dist",
    "build": "npm run build-browser && npm run build-esm",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "files": [
    "README.md",
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://code.gramener.com/cto/gramex-documap"
  },
  "keywords": [
    "gramex",
    "topicmap",
    "documentmap",
    "document",
    "topics",
    "topicmodel"
  ],
  "author": "S Anand <s.anand@gramener.com>",
  "contributors": [
    "Aayush Thakur <aayush.thakur@gramener.com>",
    "Chandana Sagar <chandana.sagar@gramener.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://code.gramener.com/cto/gramex-documap/-/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "homepage": "https://gramener.com/gramex-documap/",
  "prettier": {
    "printWidth": 120
  },
  "devDependencies": {
    "esbuild": "^0.19.2",
    "eslint": "^8.48.0",
    "eslint-plugin-html": "^7.1.0",
    "prettier": "^3.0.3"
  },
  "dependencies": {
    "@gramex/chartbase": "^1.0.0"
  }
}
